mixin body(pagename, nav1_active, nav2_active)
    - var classbody = pagename
    - var nav1_active = nav1_active
    - var nav2_active = nav2_active
    body(class= classbody) 
        include _header
        main 
            if block
                block
            else
                p No content provided
        include _footer
        //- include _page_nav
mixin banner
