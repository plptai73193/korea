            .imgDrop
                img(src="common/images/img08.png", alt="")
        .column
            form.form_book(action="#").pt-50.pb-50
                .group.pt-10.pb-10.flexBox
                    input(type="text", placeholder="Họ tên").w_auto_200
                    input(type="text",  placeholder="SĐT").w_200
                .group.pt-10.pb-10.flexBox
                    input(type="email"  placeholder="Email")
                .group.pt-10.pb-10.flexBox
                    textarea(placeholder="Nhập văn bản")
                .group.pt-10.pb-10
                    button.btn_view.text-up Gửi đi

